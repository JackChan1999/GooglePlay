<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="vertical">


        <ImageView
            android:id="@id/iv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@mipmap/net_refresh_emotion"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络不稳定,请稍后再试"
            android:textColor="@color/color_text_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="请重新刷新试试"
            android:textColor="@color/color_text_1"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/page_bt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/iv_error"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/load_error"
            android:textColor="#fff"
            android:textSize="16dp"/>

    </LinearLayout>

</FrameLayout>