<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/category_item_height"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_list_margin_left"
        android:paddingRight="@dimen/common_list_margin_right"
        android:splitMotionEvents="false">

        <LinearLayout
            android:id="@id/layoutTitle"
            android:layout_width="@dimen/category_item_title_width"
            android:layout_height="fill_parent"
            android:background="@drawable/list_selector_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@id/icon"
                android:layout_width="@dimen/category_item_tag_icon_width"
                android:layout_height="@dimen/category_item_tag_icon_width"
                android:scaleType="fitXY"
                android:src="@drawable/image_background"/>

            <TextView
                android:id="@id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/category_item_title_margin_top"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/title_color"
                android:textSize="@dimen/category_item_title_textSize"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/category_item_vertical_divider_width"
            android:layout_height="@dimen/category_item_vertical_divider_height"
            android:layout_gravity="center"
            android:background="@color/common_list_item_divider"/>

        <GridLayout
            android:id="@id/gridlayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="2"
            android:splitMotionEvents="false">

            <TextView
                android:id="@id/txt1"
                android:layout_width="@dimen/category_item_tag_width"
                android:layout_height="@dimen/category_item_tag_height"
                android:background="@drawable/list_selector_background"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/title_color"/>

            <TextView
                android:id="@id/txt2"
                android:layout_width="@dimen/category_item_tag_width"
                android:layout_height="@dimen/category_item_tag_height"
                android:background="@drawable/list_selector_background"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/title_color"/>

            <TextView
                android:id="@id/txt3"
                android:layout_width="@dimen/category_item_tag_width"
                android:layout_height="@dimen/category_item_tag_height"
                android:background="@drawable/list_selector_background"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/title_color"/>

            <TextView
                android:id="@id/txt4"
                android:layout_width="@dimen/category_item_tag_width"
                android:layout_height="@dimen/category_item_tag_height"
                android:background="@drawable/list_selector_background"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/title_color"/>

            <TextView
                android:id="@id/txt5"
                android:layout_width="@dimen/category_item_tag_width"
                android:layout_height="@dimen/category_item_tag_height"
                android:background="@drawable/list_selector_background"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/title_color"/>

            <TextView
                android:id="@id/txt6"
                android:layout_width="@dimen/category_item_tag_width"
                android:layout_height="@dimen/category_item_tag_height"
                android:background="@drawable/list_selector_background"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/title_color"/>
        </GridLayout>
    </LinearLayout>

    <View
        android:id="@id/divider"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_list_divider_height"
        android:layout_below="@id/linearLayout"
        android:layout_marginLeft="@dimen/common_list_margin_left"
        android:layout_marginRight="@dimen/common_list_margin_right"
        android:background="@color/common_list_item_divider"/>
</RelativeLayout>